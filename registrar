  <script>
    function toggle(id){
      const i = document.getElementById(id);
      i.type = i.type === 'password' ? 'text' : 'password';
    }

    // Indicador simple de fortaleza
    function meter(){
      const v = document.getElementById('pass1').value || '';
      let score = 0;
      if(v.length >= 8) score++;
      if(/[A-Z]/.test(v)) score++;
      if(/[a-z]/.test(v)) score++;
      if(/\d/.test(v)) score++;
      if(/[^\w\s]/.test(v)) score++;
      const pct = (score/5)*100;
      document.getElementById('meterbar').style.width = pct + '%';
      const t = ['Muy d√©bil','D√©bil','Aceptable','Fuerte','Muy fuerte'];
      document.getElementById('metertext').textContent = 'Fortaleza: ' + (score? t[score-1] : '‚Äî');
    }

    // Validaci√≥n del formulario
    document.getElementById('regForm').addEventListener('submit', function(e){
      e.preventDefault();
      const req = ['nombre','usuario','correo','pass1','pass2'];
      for(const id of req){
        const el = document.getElementById(id);
        if(!el.value.trim()){
          alert('Por favor completa: ' + id);
          el.focus();
          return;
        }
      }
      if(!document.getElementById('tyc').checked){
        alert('Debes aceptar los t√©rminos y condiciones.');
        return;
      }
      const p1 = document.getElementById('pass1').value;
      const p2 = document.getElementById('pass2').value;
      if(p1 !== p2){
        alert('Las contrase√±as no coinciden.');
        document.getElementById('pass2').focus();
        return;
      }
      alert('¬°Cuenta creada!\\nUsuario: ' + document.getElementById('usuario').value + '\\nCorreo: ' + document.getElementById('correo').value);
      // Aqu√≠ puedes enviar con fetch() a tu backend.
    });
  </script>
