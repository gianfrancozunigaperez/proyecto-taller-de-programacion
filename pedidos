  <script>
    function normalize(str){
      return (str||'').toLowerCase().normalize('NFD').replace(/\p{Diacritic}/gu,'');
    }

    function applyFilters(){
      const q = normalize(document.getElementById('q').value);
      const estado = document.getElementById('estado').value;
      const rows = document.querySelectorAll('#tabla tbody tr');
      rows.forEach(tr=>{
        const hayTexto = normalize(tr.innerText).includes(q);
        const est = tr.querySelector('.status')?.dataset.state || '';
        const hayEstado = !estado || est === estado;
        tr.style.display = (hayTexto && hayEstado) ? '' : 'none';
      });
    }

    let sortAsc = {num:true, total:true};
    function sortBy(key){
      const tbody = document.querySelector('#tabla tbody');
      const rows = Array.from(tbody.querySelectorAll('tr'));
      const dir = sortAsc[key] ? 1 : -1; // alterna asc/desc
      rows.sort((a,b)=>{
        const va = parseFloat(a.querySelector(`[data-${key}]`).dataset[key]);
        const vb = parseFloat(b.querySelector(`[data-${key}]`).dataset[key]);
        return (va > vb ? 1 : va < vb ? -1 : 0) * dir;
      });
      rows.forEach(r=>tbody.appendChild(r));
      sortAsc[key] = !sortAsc[key];
    }
  </script>
