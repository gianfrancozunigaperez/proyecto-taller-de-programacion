  <script>
    // Precios desde atributos data-price
    const form = document.getElementById('pedidoForm');
    const checkboxes = () => Array.from(document.querySelectorAll('input[name="platos"]'));
    const fmt = n => `S/ ${n.toFixed(2)}`;

    function calcTotal(){
      const qty = Math.max(1, parseInt(document.getElementById('cantidad').value || '1', 10));
      const chosen = checkboxes().filter(c=>c.checked);
      const sum = chosen.reduce((acc, c)=> acc + parseFloat(c.dataset.price), 0);
      document.getElementById('count').textContent = chosen.length;
      document.getElementById('subtotal').textContent = fmt(sum);
      document.getElementById('qty').textContent = qty;
      document.getElementById('total').textContent = fmt(sum * qty);
    }

    checkboxes().forEach(c=>c.addEventListener('change', calcTotal));
    window.addEventListener('DOMContentLoaded', calcTotal);

    function submitOrder(e){
      e.preventDefault();
      // Validación mínima
      const required = ['cliente','direccion','telefono'];
      for(const id of required){
        const el = document.getElementById(id);
        if(!el.value.trim()){
          alert('Por favor completa: ' + id);
          el.focus();
          return;
        }
      }
      const chosen = checkboxes().filter(c=>c.checked).map(c=>c.value);
      if(chosen.length === 0){
        alert('Selecciona al menos un plato.');
        return;
      }
      alert('¡Pedido enviado!\n' +
            '- Cliente: ' + document.getElementById('cliente').value + '\n' +
            '- Platos: ' + chosen.join(', ') + '\n' +
            '- Cantidad total: ' + document.getElementById('cantidad').value + '\n' +
            '- Total: ' + document.getElementById('total').textContent);
      // Aquí podrías hacer fetch() a tu backend.
    }
  </script>
